<!DOCTYPE html>
<html lang="ar" dir="rtl">
  <head>
    <meta charset="UTF-8" />
    <title>مدير المبيعات</title>
    <link rel="stylesheet" href="/styles.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  </head>
  <body>
    <div class="page-container">
      <div class="sidebar">
        <button id="toggle-sidebar">
          <i class="fas fa-bars"></i>
        </button>
        <ul>
          <li>
            <a href="#">
              <i class="fas fa-user-shield"></i>
              <span><% if (user && user.username) { %> <%= user.username %> <% } %></span>
            </a>
          </li>
          <li>
            <a href="/companies" class="active">
              <i class="fas fa-building"></i>
              <span>الشركات</span>
            </a>
          </li>
          <li>
            <a href="/create-company">
              <i class="fas fa-plus-circle"></i>
              <span>إنشاء شركة</span>
            </a>
          </li>
          <li>
            <a href="/clients">
              <i class="fas fa-users"></i>
              <span>العملاء</span>
            </a>
          </li>
          <li>
            <a href="/create-client">
              <i class="fas fa-user-plus"></i>
              <span>إنشاء عميل</span>
            </a>
          </li>
          <li>
            <a href="/groups">
              <i class="fas fa-layer-group"></i>
              <span>المجموعات</span>
            </a>
          </li>
          <li>
            <a href="/create-group">
              <i class="fas fa-folder-plus"></i>
              <span>إنشاء مجموعة</span>
            </a>
          </li>
          <li>
            <a href="/suppliers">
              <i class="fas fa-chart-line"></i>
              <span>مدير المبيعات</span>
            </a>
          </li>
          <li>
            <a href="/create-supplier">
              <i class="fas fa-truck"></i>
              <span>إنشاء مورد</span>
            </a>
          </li>
          <li>
            <a href="/items">
              <i class="fas fa-box"></i>
              <span>الأصناف</span>
            </a>
          </li>
          <li>
            <a href="/create-item">
              <i class="fas fa-plus-square"></i>
              <span>إضافة صنف</span>
            </a>
          </li>
        </ul>



        <li>
          <a href="/logout">
            <i class="fas fa-sign-out-alt"></i>
            <span>تسجيل خروج</span>
          </a>
        </li>
      </div>
      <div class="main-content">
        <h1>مدير المبيعات</h1>
       
        <div class="suppliers-grid">
          <% suppliers.forEach(supplier => { %>
          <div class="supplier-card">
            <h2><%= supplier.name %></h2>
            <p>اسم المستخدم: <%= supplier.username %></p>
            <p>كلمة المرور: <%= supplier.password %></p>
            <p>رقم الهاتف: <%= supplier.phone %></p>
            <% if (supplier.companyNames) { %>
              <p>الشركات: <%= supplier.companyNames %></p>
            <% } %>
            <div class="actions">
              <form action="/delete-supplier/<%= supplier.id %>" method="post">
                <button type="submit" class="delete">حذف</button>
              </form>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </div>
    <script>
      const toggleSidebarButton = document.getElementById('toggle-sidebar');
      const sidebar = document.querySelector('.sidebar');
      const mainContent = document.querySelector('.main-content');
      
      toggleSidebarButton.addEventListener('click', () => {
        sidebar.classList.toggle('collapsed');
        mainContent.classList.toggle('expanded');
      });
    </script>
  </body>
</html>
