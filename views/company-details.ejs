<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>تفاصيل الشركة</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="page-container">
        <div class="sidebar">
            <button id="toggle-sidebar">☰</button>
            <ul>
              <li>
                <a href="#">
                  <% if (user && user.username) { %> <%= user.username %> <% } %>
                </a>
              </li>
              <li>
                <a href="/companies" class="active">
                  <i class="fas fa-building"></i>
                  <span>الشركات</span>
                </a>
              </li>
              <li>
                <a href="/create-company">
                  <i class="fas fa-plus-circle"></i>
                  <span>إنشاء شركة</span>
                </a>
              </li>
              <li>
                <a href="/clients">
                  <i class="fas fa-users"></i>
                  <span>العملاء</span>
                </a>
              </li>
              <li>
                <a href="/create-client">
                  <i class="fas fa-user-plus"></i>
                  <span>إنشاء عميل</span>
                </a>
              </li>
              <li>
                <a href="/groups">
                  <i class="fas fa-layer-group"></i>
                  <span>المجموعات</span>
                </a>
              </li>
              <li>
                <a href="/create-group">
                  <i class="fas fa-folder-plus"></i>
                  <span>إنشاء مجموعة</span>
                </a>
              </li>
              <li>
                <a href="/suppliers">
                  <i class="fas fa-chart-line"></i>
                  <span>مدير المبيعات</span>
                </a>
              </li>
              <li>
                <a href="/create-supplier">
                  <i class="fas fa-truck"></i>
                  <span>إنشاء مورد</span>
                </a>
              </li>
              <li>
                <a href="/items">
                  <i class="fas fa-box"></i>
                  <span>الأصناف</span>
                </a>
              </li>
              <li>
                <a href="/create-item">
                  <i class="fas fa-plus-square"></i>
                  <span>إضافة صنف</span>
                </a>
              </li>
            </ul>
    
    
    
            <li>
              <a href="/logout">
                <i class="fas fa-sign-out-alt"></i>
                <span>تسجيل خروج</span>
              </a>
            </li>
          </div>
      
        <div class="main-content">
            <h1>تفاصيل الشركة</h1>
            <h2><%= company.name %></h2>
            <h3>المجموعات</h3>
            <ul id="groups-list">
                <% if (groups && groups.length > 0) { %>
                    <% groups.forEach(group => { %>
                        <li><%= group.name %></li>
                    <% }); %>
                <% } else { %>
                    <li>لا يوجد مجموعات مرتبطة بهذه الشركة</li>
                <% } %>
            </ul>
            <h3>العملاء</h3>
            <ul id="clients-list">
                <% if (clients && clients.length > 0) { %>
                    <% clients.forEach(client => { %>
                        <li><%= client.name %></li>
                    <% }); %>
                <% } else { %>
                    <li>لا يوجد عملاء مرتبطين بهذه الشركة</li>
                <% } %>
            </ul>
             <h3>الموردين</h3>
            <ul id="suppliers-list">
                 <% if (suppliers && suppliers.length > 0) { %>
                    <% suppliers.forEach(supplier => { %>
                        <li><%= supplier.name %></li>
                    <% }); %>
                <% } else { %>
                    <li>لا يوجد موردين مرتبطين بهذه الشركة</li>
                <% } %>
            </ul>
        </div>
    </div>
    <script>
        const toggleSidebarButton = document.getElementById('toggle-sidebar');
        const body = document.body;

        toggleSidebarButton.addEventListener('click', function() {
            body.classList.toggle('sidebar-open');
        });
    </script>
</body>
</html>
